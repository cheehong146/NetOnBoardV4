<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="HomepageHeader">
        <item name="android:background">#D3D3D3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="HomepageDataLeft">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="HomepageDataRight">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="HomepageDataContainer">
        <item name="android:textSize">18sp</item>

    </style>

</resources>
