<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorIndigo100"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_homepage_leave_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_homepage_leave_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_homepage_leave_head"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_homepage_claim_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claim"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_homepage_claim_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_homepage_claim_head"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textSize="14dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_homepage_support_header"
            style="@style/HomepageHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standby Support" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_homepage_support_header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_homepage_support_primary_desc"
                style="@style/HomepageDataLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Primary Support" />

            <TextView
                android:id="@+id/tv_homepage_support_secondary_desc"
                style="@style/HomepageDataLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_homepage_support_primary_desc"
                android:text="Secondary Support" />

            <TextView
                android:id="@+id/tv_homepage_support_primary_data"
                style="@style/HomepageDataRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_homepage_support_secondary_data"
                style="@style/HomepageDataRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_homepage_support_primary_data" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tv_homepage_misc_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/HomepageHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Misc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_garbage_collector_desc"
                style="@style/HomepageDataLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Garbage Collector" />

            <TextView
                android:id="@+id/tv_garbage_collector_date"
                style="@style/HomepageDataLeft"
                android:paddingLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_garbage_collector_desc"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_garbage_collector_name"
                style="@style/HomepageDataRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>