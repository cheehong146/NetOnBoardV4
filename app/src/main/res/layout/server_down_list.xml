<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="20dp">


    <LinearLayout
        android:id="@+id/server_down_layout_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/server_down_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/server_down_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cloud_queue_black_24dp"
            android:tint="@color/colorRed" />
    </LinearLayout>


    <TextView
        android:id="@+id/server_down_dt_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_down_layout_heading" />

    <TextView
        android:id="@+id/server_down_handling_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_down_dt_created" />

    <TextView
        android:id="@+id/server_down_dt_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_down_dt_created"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/server_down_handling_name" />

    <TextView
        android:id="@+id/time_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_down_dt_created"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/server_down_dt_started"
        android:text="-" />

    <TextView
        android:id="@+id/server_down_dt_complete_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_down_dt_created"
        android:layout_toRightOf="@id/time_divider"
        android:text="estimationTimeData" />

    <ImageView
        android:id="@+id/server_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@color/colorRightArrow" />


</RelativeLayout>